<h2>Lista de postagens:</h2>
<hr>
<a href="/admin/postagens/add">

<button class="btn btn-success">Cadastrar</button></a>

{{#each postagens}}

    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Categoria: {{categoria.nome}}</small><br>
            <small>Date de criação: {{data}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-sm btn-primary mt-4">Editar</button></a>
            <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger btn-sm mt-4" onclick="return confirm('Deseja realmente excluir?')" type="submit">Remover</button></a>             
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma postagem registrada</h4>
{{/each}}