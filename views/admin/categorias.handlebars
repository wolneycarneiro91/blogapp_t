<h2>Lista de categorias:</h2>
<hr>
<a href="/admin/categorias/add">

<button class="btn btn-success">Cadastrar</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <small>Date de criação: {{date}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-sm btn-primary mt-4">Editar</button></a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value ="{{_id}}">
                <button class="btn btn-danger btn-sm mt-2" onclick="return confirm('Deseja realmente excluir?')" type="submit">Remover</button>

            </form>

        </div>

    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}